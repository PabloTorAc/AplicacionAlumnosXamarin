<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pruebas.MainPage">

    <ContentPage.Content>

        <Frame BackgroundColor="#103057" CornerRadius="20" Padding="20" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" WidthRequest="300" HeightRequest="400">
            <StackLayout Margin="20" Spacing="20">
                <Image Source="descarga.jpeg" HorizontalOptions="CenterAndExpand" HeightRequest="150"/>

                <Frame BackgroundColor="#fff" CornerRadius="5" Padding="0">
                    <Entry x:Name="user" Placeholder="Nombre de usuario" TextColor="#333" PlaceholderColor="#999" />
                </Frame>

                <Frame BackgroundColor="#fff" CornerRadius="5" Padding="0">
                    <Entry x:Name="pass" Placeholder="Contraseña" IsPassword="True" TextColor="#333" PlaceholderColor="#999" />
                </Frame>

                <Button Text="Iniciar sesión" TextColor="#fff" BackgroundColor="#007bff" CornerRadius="5" VerticalOptions="EndAndExpand" HorizontalOptions="EndAndExpand"
                        Clicked="MetodoIngresar"/>
            </StackLayout>
        </Frame>
    </ContentPage.Content>

</ContentPage>
